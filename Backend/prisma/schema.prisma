// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int              @id @default(autoincrement())
  name         String           @db.VarChar(191)
  email        String           @unique
  password     String
  role         Int
  sid          String           @default(uuid())
  RefreshToken BlackListToken[]
  Jobs         Jobs[]
}

model BlackListToken {
  tokenId   Int    @id @default(autoincrement())
  userEmail String
  token     String
  email     User   @relation(fields: [userEmail], references: [email])
}

model Jobs {
  id          Int      @id
  name        String
  description String
  salary      Int
  location    String
  experience  Int /// This is in years
  deadline    DateTime
  post_by     Int
  email       User     @relation(fields: [post_by], references: [id])
}
